<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background split with 20% height -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#2D4059"
        android:weightSum="26">
        <RelativeLayout
            android:id="@+id/backgroundSplit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_alignParentTop="true"
            android:background="#2D4059">

            <!-- Back button -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:padding="8dp"
                android:background="@android:color/transparent"
                app:tint="#DBE2EF"
                android:src="@drawable/backbtn"
                android:scaleType="fitCenter" />

            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Create a service post"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="22"

            android:background="@drawable/rounded_background"
            android:orientation="vertical"

            >


        </LinearLayout>
        <!-- Navigation Bar -->
        <LinearLayout
            android:id="@+id/navigationBar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF"
            android:gravity="center"
            android:weightSum="3">

            <!-- Navigation icons -->
            <ImageView
                android:id="@+id/icon1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/homebtn"
                app:tint = "#2D4059"/>

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/requestsbtn"
                app:tint = "#F9AC0C"/>

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/profilebtn"
                app:tint = "#2D4059"/>
        </LinearLayout>
    </LinearLayout>
    <!-- Main Layout -->


</RelativeLayout>
